<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="vehicle_service_form_view" model="ir.ui.view">
            <field name="name">vehicle.service.form.view</field>
            <field name="model">vehicle.service</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="row">
                            <div class="col-7">
                                <div class="oe_title">
                                    <h1>
                                        <field name="name" placeholder="e.g. Engine Diagnostics and Repair"
                                               required="1"/>
                                    </h1>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="oe_title">
                                    <field name="color" widget="color_picker"/>
                                </div>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="service_name" invisible="1"/>
                                <field name="product_id" invisible="product_id == False" readonly="1"/>
                            </group>
                            <group>
                                <field name="lst_price" widget='monetary' class="me-2" string="Service Charges"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="company_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="vehicle_service_list_view" model="ir.ui.view">
            <field name="name">vehicle.service.list.view</field>
            <field name="model">vehicle.service</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="lst_price" widget='monetary' string="Service Charges"
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="color" widget="color_picker"/>
                    <field name="company_id" column_invisible="1"/>
                    <field name="currency_id" column_invisible="1"/>
                </list>
            </field>
        </record>
        <record id="action_vehicle_service" model="ir.actions.act_window">
            <field name="name">Vehicle Services</field>
            <field name="res_model">vehicle.service</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
