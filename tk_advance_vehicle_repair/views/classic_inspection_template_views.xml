<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--Classic Inspection Template-->
        <record id="classic_inspection_template_form_view" model="ir.ui.view">
            <field name="name">classic.inspection.template.form.view</field>
            <field name="model">classic.inspection.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. Multi-Point Inspection Template.." required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="inspection_report_type" widget="radio" options="{'horizontal': True}"/>
                            </group>
                        </group>

                        <!--Advance Inspection-->
                        <separator string="Advanced Inspection" name="adv_advanced_inspections"
                                   invisible="inspection_report_type != 'advanced_inspection'"/>
                        <span class="d-inline-block" invisible="inspection_report_type != 'advanced_inspection'">
                            <field name="is_interior_item"/>
                            <label for="is_interior_item"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'advanced_inspection'">
                            <field name="is_exterior_item"/>
                            <label for="is_exterior_item"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'advanced_inspection'">
                            <field name="is_mechanical_item"/>
                            <label for="is_mechanical_item"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'advanced_inspection'">
                            <field name="is_vehicle_component"/>
                            <label for="is_vehicle_component"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'advanced_inspection'">
                            <field name="is_vehicle_fluid"/>
                            <label for="is_vehicle_fluid"/>
                        </span>

                        <!--Classic Inspection-->
                        <separator string="Classic Inspections" name="adv_classic_inspections"
                                   invisible="inspection_report_type != 'classic_inspection'"/>
                        <span class="d-inline-block" invisible="inspection_report_type != 'classic_inspection'">
                            <field name="exterior_part"/>
                            <label for="exterior_part"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'classic_inspection'">
                            <field name="interior_part"/>
                            <label for="interior_part"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'classic_inspection'">
                            <field name="under_hood_part"/>
                            <label for="under_hood_part"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'classic_inspection'">
                            <field name="under_vehicle_part"/>
                            <label for="under_vehicle_part"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'classic_inspection'">
                            <field name="is_fluid"/>
                            <label for="is_fluid"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'classic_inspection'">
                            <field name="is_tire_condition"/>
                            <label for="is_tire_condition"/>
                        </span>
                        <span class="d-inline-block" invisible="inspection_report_type != 'classic_inspection'">
                            <field name="is_brake_condition"/>
                            <label for="is_brake_condition"/>
                        </span>
                        <notebook>
                            <!--Classic Inspection-->
                            <page name="exterior_inspection_parts" string="Exterior Parts"
                                  invisible="exterior_part == False or inspection_report_type != 'classic_inspection'">
                                <field name="classic_exterior_part_ids">
                                    <list create="0" edit="0">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page name="interior_inspection_parts" string="Interior Parts"
                                  invisible="interior_part == False or inspection_report_type != 'classic_inspection'">
                                <field name="classic_interior_part_ids">
                                    <list create="0" edit="0">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page name="under_hood_inspection_parts" string="Under Hood Parts"
                                  invisible="under_hood_part == False or inspection_report_type != 'classic_inspection'">
                                <field name="classic_under_hood_part_ids">
                                    <list create="0" edit="0">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page name="under_vehicle_inspection_parts" string="Under Vehicle Parts"
                                  invisible="under_vehicle_part == False or inspection_report_type != 'classic_inspection'">
                                <field name="classic_under_vehicle_part_ids">
                                    <list create="0" edit="0">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page name="vehicle_inspection_fluid" string="Vehicle Fluids"
                                  invisible="is_fluid == False or inspection_report_type != 'classic_inspection'">
                                <field name="classic_fluid_ids">
                                    <list create="0" edit="0">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page name="vehicle_tire_conditions" string="Tire Conditions"
                                  invisible="is_tire_condition == False or inspection_report_type != 'classic_inspection'">
                                <field name="classic_tire_ids">
                                    <list create="0" edit="0">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page name="vehicle_brake_conditions" string="Brake Conditions"
                                  invisible="is_brake_condition == False or inspection_report_type != 'classic_inspection'">
                                <field name="classic_brake_condition_ids">
                                    <list create="0" edit="0">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>

                            <!--Advance Inspection-->
                            <page name="interior_items" string="Interior Items"
                                  invisible="is_interior_item == False or inspection_report_type != 'advanced_inspection'">
                                <field name="advance_interior_item_ids">
                                    <list create="0" edit="0">
                                        <field name="name" string="Name"/>
                                        <field name="item_category"/>
                                    </list>
                                </field>
                            </page>
                            <page name="exterior_items" string="Exterior Items"
                                  invisible="is_exterior_item == False or inspection_report_type != 'advanced_inspection'">
                                <field name="advance_exterior_item_ids">
                                    <list editable="bottom">
                                        <field name="vehicle_view" required="1"/>
                                        <field name="vehicle_condition_location_id" required="1"
                                               options="{'no_create': True, 'no_quick_create': True}"/>
                                    </list>
                                </field>
                            </page>
                            <page name="mechanical_items" string="Mechanical Items"
                                  invisible="is_mechanical_item == False or inspection_report_type != 'advanced_inspection'">
                                <field name="advance_mechanical_item_ids">
                                    <list create="0" edit="0">
                                        <field name="name" string="Name"/>
                                        <field name="item_category"/>
                                    </list>
                                </field>
                            </page>
                            <page name="vehicle_components" string="Vehicle Components"
                                  invisible="is_vehicle_component == False or inspection_report_type != 'advanced_inspection'">
                                <field name="advance_vehicle_component_ids">
                                    <list create="0" edit="0">
                                        <field name="name" string="Name"/>
                                        <field name="compo_vehicle_side"/>
                                    </list>
                                </field>
                            </page>
                            <page name="vehicle_fluids" string="Vehicle Fluids"
                                  invisible="is_vehicle_fluid == False or inspection_report_type != 'advanced_inspection'">
                                <field name="advance_vehicle_fluid_ids">
                                    <list create="0" edit="0">
                                        <field name="name" string="Name"/>
                                        <field name="fluid_vehicle_side"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="classic_inspection_template_tree_view" model="ir.ui.view">
            <field name="name">classic.inspection.template.tree.view</field>
            <field name="model">classic.inspection.template</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="inspection_report_type"/>
                </list>
            </field>
        </record>
        <record id="classic_inspection_template_search_view" model="ir.ui.view">
            <field name="name">classic.inspection.template.search.view</field>
            <field name="model">classic.inspection.template</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <group>
                        <filter name="inspection_report_type" string="Inspection Type"
                                context="{'group_by': 'inspection_report_type'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_classic_inspection_template" model="ir.actions.act_window">
            <field name="name">Inspection Templates</field>
            <field name="res_model">classic.inspection.template</field>
            <field name="view_mode">list,form,search</field>
        </record>
    </data>
</odoo>
