<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="scratch_report_form_view" model="ir.ui.view">
            <field name="name">scratch.report.form.view</field>
            <field name="model">scratch.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="row">
                            <div class="col-6">
                                <group string="Vehicle Details">
                                    <field name="name" required="1"/>
                                    <field name="vehicle_brand_id" required="1"
                                           options="{'no_create': True, 'no_create_edit': True}"/>
                                </group>
                            </div>
                            <div class="col-6 text-center">
                                <field name="avatar" nolabel="1" widget="image" required="1"
                                       options='{"size": [250, 250]}' class="bg-view"/>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="scratch_report_list_view" model="ir.ui.view">
            <field name="name">scratch.report.list.view</field>
            <field name="model">scratch.report</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="vehicle_brand_id"/>
                </list>
            </field>
        </record>
        <record id="scratch_report_search_view" model="ir.ui.view">
            <field name="name">scratch.report.search.view</field>
            <field name="model">scratch.report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <group>
                        <filter name="vehicle_brand_id" string="Brand"
                                context="{'group_by': 'vehicle_brand_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_scratch_report" model="ir.actions.act_window">
            <field name="name">Scratch Reports</field>
            <field name="res_model">scratch.report</field>
            <field name="view_mode">list,form,search</field>
        </record>
    </data>
</odoo>
