<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="service_team_form_view" model="ir.ui.view">
            <field name="name">service.team.form.view</field>
            <field name="model">service.team</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="title"/>
                            <h1>
                                <field name="title" placeholder="e.g. Electrical System Repairs Team.." required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="service_team_project_id" invisible="service_team_project_id == False"
                                       readonly="1"/>
                            </group>
                            <group>
                                <field name="service_manager_id" widget="many2one_avatar_user" required="1"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="team_members" string="Team Members">
                                <field name="team_member_ids" mode="kanban" class="w-100">
                                    <kanban>
                                        <templates>
                                            <t t-name="card" class="flex-row">
                                                <aside>
                                                    <field name="avatar_128" widget="image" class="o_image_64_cover"
                                                           alt="Avatar"/>
                                                </aside>
                                                <main class="ms-3">
                                                    <field name="name" class="fw-bold fs-5"/>
                                                    <div class="d-flex align-items-baseline text-break">
                                                        <i class="fa fa-envelope me-1" role="img" aria-label="Email"
                                                           title="Email"/>
                                                        <field name="email"/>
                                                    </div>
                                                    <div class="d-flex align-items-baseline text-break">
                                                        <i class="fa fa-phone me-1" role="img"
                                                           aria-label="Phone" title="Phone"/>
                                                        <field name="phone"/>
                                                    </div>
                                                </main>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <record id="service_team_list_view" model="ir.ui.view">
            <field name="name">service.team.list.view</field>
            <field name="model">service.team</field>
            <field name="arch" type="xml">
                <list>
                    <field name="title"/>
                    <field name="service_manager_id" widget="many2one_avatar_user"/>
                </list>
            </field>
        </record>
        <record id="service_team_search_view" model="ir.ui.view">
            <field name="name">service.team.search.view</field>
            <field name="model">service.team</field>
            <field name="arch" type="xml">
                <search>
                    <field name="title"/>
                    <group>
                        <filter name="service_manager_id" string="Service Manager"
                                context="{'group_by': 'service_manager_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_service_team" model="ir.actions.act_window">
            <field name="name">Teams</field>
            <field name="res_model">service.team</field>
            <field name="view_mode">list,form,search,activity</field>
        </record>
    </data>
</odoo>
