<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="repair_job_card_form_view" model="ir.ui.view">
            <field name="name">repair.job.card.form.view</field>
            <field name="model">repair.job.card</field>
            <field name="arch" type="xml">
                <form duplicate="false">
                    <header>
                        <field name="is_registered_vehicle" invisible="1"/>
                        <field name="repair_sale_order_id" invisible="1"/>
                        <field name="repair_order_state" invisible="1"/>
                        <field name="stages" widget="statusbar"
                               statusbar_visible="draft,assign_to_technician,in_diagnosis,supervisor_inspection,complete"/>
                        <button string="Link Vehicle to Customer" name="action_create_vehicle_registration"
                                class="btn btn-info" type="object"
                                invisible="vehicle_from != 'new' or is_registered_vehicle != False or stages != 'draft'"/>

                        <button string="Assign to Technician" name="draft_to_assign_to_technician" type="object"
                                class="oe_highlight" invisible="stages != 'draft'" icon="fa-user"
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor"/>

                        <button string="In Diagnosis" name="assign_to_technician_to_in_diagnosis" type="object"
                                class="oe_highlight"
                                invisible="stages not in ['assign_to_technician', 'hold', 'reject']"
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor,tk_advance_vehicle_repair.vehicle_repair_technician"/>

                        <button string="Inspection Request" name="in_diagnosis_to_supervisor_inspection" type="object"
                                class="btn btn-warning" icon="fa-search"
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_technician"
                                invisible="stages != 'in_diagnosis'"/>

                        <button string="Create Repair Quotation" name="action_repair_sale_order" type="object"
                                class="oe_highlight" groups="tk_advance_vehicle_repair.vehicle_repair_manager"
                                invisible="is_skip_quotation == False and inspection_job_card_id != False or stages in ['draft', 'reject', 'cancel'] or repair_sale_order_id != False"/>

                        <button string="Update Quotation" name="update_repair_quotation" type="object"
                                class="btn btn-info" groups="tk_advance_vehicle_repair.vehicle_repair_manager"
                                invisible="repair_sale_order_id == False or repair_order_state != 'draft' or stages in ['complete', 'locked']"/>

                        <button string="Create Invoice" name="create_repair_job_card_invoice" type="object"
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager"
                                class="btn btn-info" invisible="repair_order_state != 'sale' or repair_invoices != 0"/>

                        <button string="Hold" name="complete_to_hold" type="object" icon="fa-stop-circle"
                                invisible="stages not in ['in_diagnosis', 'supervisor_inspection']"
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor"/>

                        <button string="Reject" name="supervisor_inspection_to_reject" type="object" icon="fa-close"
                                class="btn btn-danger" confirm="Are you sure you want to reject the repair order?"
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor"
                                invisible="stages != 'supervisor_inspection'"/>

                        <button string="Complete" name="reject_to_complete" type="object" class="btn btn-success"
                                confirm="Confirm that the repair order has been completed" icon="fa-check"
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor"
                                invisible="stages != 'supervisor_inspection'"/>

                        <button string="Cancel" name="hold_to_cancel" type="object" icon="fa-ban"
                                invisible="stages not in ['assign_to_technician', 'in_diagnosis', 'supervisor_inspection', 'hold', 'reject']"
                                confirm="Are you sure you want to cancel the repair order?"
                                class="btn btn-outline-danger"
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager"/>

                        <button string="Locked" name="complete_to_locked" type="object" class="btn btn-warning"
                                invisible="stages != 'complete'" icon="fa-lock"
                                confirm="Are you sure you want to lock the repair order?"
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" position="inside">
                            <button class="oe_stat_button" type="object" name="view_team_tasks"
                                    icon="fa-tasks" invisible="not team_task_count">
                                <field string="Tasks" name="team_task_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_repair_delivery"
                                    invisible="repair_delivery_orders == 0" icon="fa-truck">
                                <field string="Delivery" name="repair_delivery_orders" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="view_repair_invoice"
                                    invisible="repair_invoices == 0" icon="fa-pencil-square-o">
                                <field string="Invoices" name="repair_invoices" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="sequence_number"/>
                                <br/>
                                <h3>
                                    <field name="inspection_job_card_id" invisible="1"/>
                                    <field name="vehicle_booking_id" invisible="1"/>
                                    <field name="vehicle_from" widget="radio" options="{'horizontal': true}"
                                           readonly="stages != 'draft' or inspection_job_card_id != False or vehicle_booking_id != False"/>
                                </h3>
                            </h1>
                        </div>
                        <group>
                            <group string="Inspection Job Card Details" invisible="inspection_job_card_id == False">
                                <field name="inspection_job_card_id" invisible="inspection_job_card_id == False"/>
                            </group>
                            <group string="Booking Details" invisible="vehicle_booking_id == False">
                                <field name="vehicle_booking_id" invisible="vehicle_booking_id == False"/>
                            </group>
                            <group string="Inspection/Repair Date">
                                <field name="inspect_repair_date" readonly="stages != 'draft'" required="1"/>
                            </group>
                        </group>
                        <group string="Vehicle Details">
                            <group>
                                <field name="is_skip_quotation" invisible="1"/>
                                <field name="customer_id" readonly="stages != 'draft'"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="fleet_vehicle_id" options="{'no_create': True, 'no_create_edit': True}"
                                       invisible="vehicle_from != 'fleet_vehicle'" readonly="stages != 'draft'"/>
                                <field name="register_vehicle_id" options="{'no_create': True, 'no_create_edit': True}"
                                       invisible="vehicle_from != 'customer_vehicle'" readonly="stages != 'draft'"/>
                                <field name="vehicle_brand_id" required="1" readonly="stages != 'draft'"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="registration_no" required="1" readonly="stages != 'draft'"/>
                                <field name="is_scratch_report" readonly="stages == 'locked'"/>
                                <field name="scratch_report_id" invisible="is_scratch_report == False"
                                       options="{'no_create': True, 'no_create_edit': True}"
                                       required="is_scratch_report == True" readonly="stages == 'locked'"/>
                            </group>
                            <group>
                                <field name="vehicle_model_id" required="1" readonly="stages != 'draft'"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="vehicle_fuel_type_id" required="1" readonly="stages != 'draft'"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="vin_no" readonly="stages != 'draft'"/>

                                <label for="odometer" string="Last Odometer"/>
                                <div class="address_format">
                                    <field name="odometer" style="width: 25%"
                                           readonly="stages == 'locked' or service_history_id != False or fleet_odometer_history_id != False"/>
                                    <field name="odometer_unit" required="1"
                                           readonly="stages == 'locked' or service_history_id != False or fleet_odometer_history_id != False"
                                           style="width: 20%; margin-left: 15px; margin-right: 15px;"/>
                                    <button name="%(action_update_service_info)d" type="action" style="width: auto;"
                                            string="Update Service Info" class="btn btn-outline-info"
                                            invisible="service_history_id != False or fleet_odometer_history_id != False"/>
                                </div>
                                <field name="service_history_id" invisible="service_history_id == False" readonly="1"
                                       string="Service History"/>
                                <field name="fleet_odometer_history_id" invisible="fleet_odometer_history_id == False"
                                       readonly="1" string="Service History"/>

                                <field name="transmission_type" widget="radio" options="{'horizontal': true}"
                                       readonly="stages != 'draft'"/>

                                <field name="is_vehicle_under_warranty" readonly="stages == 'locked'"/>
                            </group>
                        </group>
                        <group string="Address Details">
                            <group>
                                <span class="o_form_label o_td_label" name="address_name">Address</span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"
                                           readonly="stages != 'draft'"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"
                                           readonly="stages != 'draft'"/>
                                    <field name="city" placeholder="City" class="o_address_city"
                                           readonly="stages != 'draft'"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                           readonly="stages != 'draft'"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                                           readonly="stages != 'draft'"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                           readonly="stages != 'draft'"/>
                                </div>
                            </group>
                            <group>
                                <field name="phone" readonly="stages != 'draft'"/>
                                <field name="email" readonly="stages != 'draft'"/>
                            </group>
                        </group>
                        <group>
                            <group string="Additional Information">
                                <field name="company_id" readonly="stages != 'draft'"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="responsible_id" widget="many2one_avatar_user" required="1"
                                       readonly="stages != 'draft'"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                            <group string="Sale Order Details" groups="tk_advance_vehicle_repair.vehicle_repair_manager"
                                   invisible="repair_sale_order_id == False">
                                <label for="repair_sale_order_id" string="Sale Order"
                                       invisible="repair_sale_order_id == False"/>
                                <div class="address_format" invisible="repair_sale_order_id == False">
                                    <field name="repair_sale_order_id" readonly="1" style="width: auto;"/>
                                    <strong>&#160;&#160;
                                        <field name="repair_order_state" widget="badge"
                                               decoration-info="repair_order_state == 'draft'"
                                               decoration-danger="repair_order_state == 'sent'"
                                               decoration-success="repair_order_state == 'sale'"
                                               decoration-primary="repair_order_state == 'done'"
                                               decoration-warning="repair_order_state == 'cancel'" nolabel="1"
                                               invisible="repair_sale_order_id == False"
                                               style="width: auto; margin-left: 15px;"/>
                                    </strong>
                                    <field name="repair_amount" style="width: auto; margin-left: 10px;" nolabel="1"/>
                                </div>
                            </group>
                        </group>
                        <notebook
                                groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor,tk_advance_vehicle_repair.vehicle_repair_technician">
                            <page name="customer_observation" string="Customer Observations">
                                <field name="customer_observation" nolabel="1" readonly="stages == 'locked'"/>
                                <hr/>
                                <div class="row">
                                    <div class="col-3">
                                        <group>
                                            <field name="date" readonly="stages == 'locked'" style="width: auto;"/>
                                        </group>
                                        <field name="signature" widget="signature" nolabel="1"
                                               readonly="stages == 'locked'"
                                               style="width: auto;"/>
                                        <br/>
                                        <h5 style="text-align: center;">
                                            Authorized Signature
                                        </h5>
                                    </div>
                                    <div class="col-9">
                                    </div>
                                </div>
                            </page>
                            <page name="service_team" string="Services">
                                <field name="vehicle_service_team_ids"
                                       readonly="inspection_job_card_id == False and repair_order_state in ['sent', 'sale', 'done', 'cancel'] or stages == 'locked'">
                                    <form>
                                        <sheet>
                                            <div class="oe_title">
                                                <label for="vehicle_service_id"/>
                                                <h1>
                                                    <field name="vehicle_service_id" readonly="team_task_id != False"
                                                           options="{'no_create': True, 'no_create_edit': True}"/>
                                                </h1>
                                            </div>
                                            <group string="Service Team Details">
                                                <group>
                                                    <field name="service_team_id" readonly="team_task_id != False"
                                                           options="{'no_create': True, 'no_create_edit': True}"/>
                                                    <field name="member_ids" invisible="1"/>
                                                    <field name="team_project_id" invisible="1"/>
                                                    <field name="vehicle_service_team_members_ids"
                                                           widget="many2many_tags" readonly="team_task_id != False"
                                                           options="{'no_create': True, 'no_create_edit': True, 'color_field': 'color'}"/>
                                                    <field name="team_task_id" invisible="team_task_id == False"
                                                           readonly="1"/>
                                                </group>
                                                <group>
                                                    <label for="start_date" string="Date"/>
                                                    <div class="o_row">
                                                        <field name="start_date" nolabel="1" class="oe_inline"
                                                               readonly="team_task_id != False"/>
                                                        <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon"
                                                           title="Arrow"/>
                                                        <field name="end_date" nolabel="1" class="oe_inline"
                                                               readonly="team_task_id != False"/>
                                                    </div>
                                                    <field name="work_is_done" invisible="1"/>
                                                    <field name="service_charge" readonly="team_task_id != False"
                                                           groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor"/>
                                                    <field name="company_id" invisible="1"/>
                                                    <field name="currency_id" invisible="1"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                    <list default_order='end_date asc' decoration-danger="work_is_done == False"
                                          decoration-success="work_is_done == True">
                                        <field name="vehicle_service_id"/>
                                        <field name="service_team_id" required="1"/>
                                        <field name="member_ids" column_invisible="1"/>
                                        <field name="vehicle_service_team_members_ids" widget="many2many_tags"
                                               options="{'color_field': 'color'}" required="1"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="team_project_id" column_invisible="1"/>
                                        <field name="team_task_id" widget="many2one_button"/>
                                        <field name="work_is_done" column_invisible="1"/>
                                        <field name="service_charge" sum="service_charge"
                                               groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor"/>
                                        <field name="company_id" column_invisible="1"/>
                                        <field name="currency_id" column_invisible="1"/>
                                        <button string="Create Task" name="create_service_task" type="object"
                                                class="oe_highlight"
                                                invisible="service_team_id == False or not vehicle_service_team_members_ids or team_task_id != False"
                                                groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor"/>
                                    </list>
                                </field>
                                <hr/>
                                <div class="row">
                                    <div class="col-3">
                                        <group>
                                            <field name="date" readonly="stages == 'locked'" style="width: auto;"/>
                                        </group>
                                        <field name="signature" widget="signature" nolabel="1"
                                               readonly="stages == 'locked'"
                                               style="width: auto;"/>
                                        <br/>
                                        <h5 style="text-align: center;">
                                            Authorized Signature
                                        </h5>
                                    </div>
                                    <div class="col-6">
                                    </div>
                                    <div class="col-3" style="text-align: right;"
                                         groups="tk_advance_vehicle_repair.vehicle_repair_manager">
                                        <h6>
                                            Total Estimations
                                            <hr style="margin: 5px;"/>
                                        </h6>
                                        Service Charges:
                                        <field name="service_charge"/>
                                        <br/>
                                        Spare Parts Charges:
                                        <field name="part_price"/>
                                        <br/>
                                        <hr style="margin: 5px;"/>
                                        <strong>
                                            Total:
                                        </strong>
                                        <field name="sub_total"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                    </div>
                                </div>
                            </page>
                            <page name="vehicle_spare_parts" string="Vehicle Spare Parts">
                                <field name="vehicle_order_spare_part_ids" nolabel="1"
                                       readonly="inspection_job_card_id == False and repair_order_state in ['sent', 'sale', 'done', 'cancel'] or stages == 'locked'">
                                    <list editable="bottom">
                                        <field name="product_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                        <field name="repair_job_card_id" column_invisible="1"/>
                                        <field name="vehicle_service_team_ids" column_invisible="1"/>
                                        <field name="valid_vehicle_service_ids" column_invisible="1"/>
                                        <field name="vehicle_service_ids" widget="many2many_tags"
                                               options="{'no_create': True, 'no_create_edit': True, 'color_field': 'color'}"/>
                                        <field name="qty"/>
                                        <field name="unit_price"
                                               groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor"/>
                                        <field name="sub_total" sum="sub_total"
                                               groups="tk_advance_vehicle_repair.vehicle_repair_manager,tk_advance_vehicle_repair.vehicle_repair_supervisor"/>
                                        <field name="company_id" column_invisible="1"/>
                                        <field name="currency_id" column_invisible="1"/>
                                    </list>
                                </field>
                                <hr/>
                                <div class="row">
                                    <div class="col-3">
                                        <group>
                                            <field name="date" readonly="stages == 'locked'" style="width: auto;"/>
                                        </group>
                                        <field name="signature" widget="signature" nolabel="1"
                                               readonly="stages == 'locked'"
                                               style="width: auto;"/>
                                        <br/>
                                        <h5 style="text-align: center;">
                                            Authorized Signature
                                        </h5>
                                    </div>
                                    <div class="col-6">
                                    </div>
                                    <div class="col-3" style="text-align: right;"
                                         groups="tk_advance_vehicle_repair.vehicle_repair_manager">
                                        <h6>
                                            Total Estimations
                                            <hr style="margin: 5px;"/>
                                        </h6>
                                        Service Charges:
                                        <field name="service_charge"/>
                                        <br/>
                                        Spare Parts Charges:
                                        <field name="part_price"/>
                                        <br/>
                                        <hr style="margin: 5px;"/>
                                        <strong>
                                            Total:
                                        </strong>
                                        <field name="sub_total"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                    </div>
                                </div>
                            </page>
                            <page name="checklist" string="Checklists">
                                <group>
                                    <group>
                                        <field name="check_list_template_id" readonly="stages == 'locked'"
                                               options="{'no_create': True, 'no_create_edit': True}"/>
                                    </group>
                                </group>
                                <separator string="Checklist Template Details" name="checklist_template_details"/>
                                <field name="repair_checklist_ids" widget="section_and_note_one2many" nolabel="1"
                                       readonly="stages == 'locked'">
                                    <list editable="bottom" default_order='sequence asc'
                                          decoration-success="is_check == True">
                                        <control>
                                            <create name="add_product_control" string="Add a item"/>
                                            <create name="add_section_control" string="Add a section"
                                                    context="{'default_display_type': 'line_section'}"/>
                                        </control>
                                        <field name="sequence" widget="handle"/>
                                        <field name="is_check"/>
                                        <field name="name" widget="section_and_note_text" optional="show"/>
                                        <field name="display_type" column_invisible="1"/>
                                        <field name="description"/>
                                    </list>
                                </field>
                                <hr/>
                                <div class="row">
                                    <div class="col-3">
                                        <group>
                                            <field name="date" readonly="stages == 'locked'" style="width: auto;"/>
                                        </group>
                                        <field name="signature" widget="signature" nolabel="1"
                                               readonly="stages == 'locked'"
                                               style="width: auto;"/>
                                        <br/>
                                        <h5 style="text-align: center;">
                                            Authorized Signature
                                        </h5>
                                    </div>
                                    <div class="col-9">
                                    </div>
                                </div>
                            </page>
                            <page name="repair_images" string="Repair Images">
                                <field name="repair_image_ids" nolabel="1" readonly="stages == 'locked'">
                                    <form>
                                        <sheet>
                                            <div class="oe_title float-left">
                                                <label for="name"/>
                                                <h1>
                                                    <field name="name" placeholder="e.g. Name"/>
                                                </h1>
                                            </div>
                                            <div style="width: 40%; height: 40%;" class="float-right">
                                                <field name="avatar" style="width: 40%; height: 40%;"
                                                       class="img-thumbnail float-right" widget="image" required="1"/>
                                            </div>
                                        </sheet>
                                    </form>
                                    <kanban string="Repair Images">
                                        <field name="id"/>
                                        <field name="name"/>
                                        <field name="avatar"/>
                                        <templates>
                                            <t t-name="card" class="border-0">
                                                <div class="card oe_kanban_global_click p-0 border-0">
                                                    <div class="row">
                                                        <div class="col-8">
                                                            <strong>
                                                                <field name="name"/>
                                                            </strong>
                                                        </div>
                                                        <div class="col-4 text-end">
                                                            <!-- below 100 Kb: good -->
                                                            <t t-if="record.avatar.raw_value.length &lt; 100*1000">
                                                                <t t-set="size_status" t-value="'text-bg-success'"/>
                                                                <t t-set="message">Acceptable file size</t>
                                                            </t>
                                                            <!-- below 1000 Kb: decent -->
                                                            <t t-elif="record.avatar.raw_value.length &lt; 1000*1000">
                                                                <t t-set="size_status" t-value="'text-bg-warning'"/>
                                                                <t t-set="message">Huge file size. The image should be
                                                                    optimized/reduced.
                                                                </t>
                                                            </t>
                                                            <!-- above 1000 Kb: bad -->
                                                            <t t-else="1">
                                                                <t t-set="size_status"
                                                                   t-value="'text-bg-danger'"/>
                                                                <t t-set="message">Optimization required! Reduce the
                                                                    image size or increase your compression settings.
                                                                </t>
                                                            </t>
                                                            <span t-attf-class="badge #{size_status} o_product_image_size"
                                                                  t-esc="record.avatar.value" t-att-title="message"/>
                                                        </div>
                                                    </div>
                                                    <hr class="mb-1 mt-1"/>
                                                    <div class="h-100 w-100">
                                                        <field name="avatar" widget="image" class="card-img-top"
                                                               style="height:223px;"
                                                               options="{'img_class': 'object-fit-cover h-100 w-100', 'size': [360, 223]}"/>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                                <hr/>
                                <div class="row">
                                    <div class="col-3">
                                        <group>
                                            <field name="date" readonly="stages == 'locked'" style="width: auto;"/>
                                        </group>
                                        <field name="signature" widget="signature" nolabel="1"
                                               readonly="stages == 'locked'"
                                               style="width: auto;"/>
                                        <br/>
                                        <h5 style="text-align: center;">
                                            Authorized Signature
                                        </h5>
                                    </div>
                                    <div class="col-9">
                                    </div>
                                </div>
                            </page>
                            <page name="reject_reason" string="Reject Reasons" invisible="stages != 'reject'">
                                <field name="reject_reasons" readonly="stages == 'locked'"/>
                                <hr/>
                                <div class="row">
                                    <div class="col-3">
                                        <group>
                                            <field name="date" readonly="stages == 'locked'" style="width: auto;"/>
                                        </group>
                                        <field name="signature" widget="signature" nolabel="1"
                                               readonly="stages == 'locked'"
                                               style="width: auto;"/>
                                        <br/>
                                        <h5 style="text-align: center;">
                                            Authorized Signature
                                        </h5>
                                    </div>
                                    <div class="col-9">
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <record id="repair_job_card_list_view" model="ir.ui.view">
            <field name="name">repair.job.card.list.view</field>
            <field name="model">repair.job.card</field>
            <field name="arch" type="xml">
                <list duplicate="false">
                    <field name="sequence_number"/>
                    <field name="vehicle_brand_id"/>
                    <field name="vehicle_model_id"/>
                    <field name="vehicle_fuel_type_id"/>
                    <field name="registration_no"/>
                    <field name="customer_id"/>
                    <field name="stages" widget="badge" optional="show"
                           decoration-info="stages == 'draft'"
                           decoration-primary="stages == 'assign_to_technician'"
                           decoration-danger="stages in ('in_diagnosis', 'supervisor_inspection', 'cancel')"
                           decoration-warning="stages in ('hold', 'locked')"
                           decoration-success="stages == 'complete'"/>
                </list>
            </field>
        </record>
        <record id="repair_job_card_kanban_view" model="ir.ui.view">
            <field name="name">repair.job.card.kanban.view</field>
            <field name="model">repair.job.card</field>
            <field name="arch" type="xml">
                <kanban edit="false" group_create="0" records_draggable="0" class="o_slide_kanban" sample="1"
                        quick_create="false">
                    <field name="id"/>
                    <field name="sequence_number"/>
                    <field name="vehicle_brand_id"/>
                    <field name="vehicle_model_id"/>
                    <field name="registration_no"/>
                    <field name="inspect_repair_date"/>
                    <field name="customer_id"/>
                    <field name="stages"/>
                    <field name="responsible_id"/>
                    <field name="activity_ids"/>
                    <templates>
                        <t t-name="card">
                            <main>
                                <!-- Header -->
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <field name="sequence_number" class="fw-bold fs-5"/>
                                    <field name="responsible_id" widget="many2one_avatar_user"
                                           class="fw-bolder ms-auto"/>
                                </div>
                                <!--Center-->
                                <div class="mb-2">
                                    <div class="text-muted small mb-1">
                                        <i class="fa fa-car me-1" title="Vehicle"/>
                                        <field name="vehicle_brand_id" class="me-1"/>/
                                        <field name="vehicle_model_id" class="me-1"/>/
                                        <field name="registration_no"/>
                                    </div>
                                    <div class="text-muted small">
                                        <i class="fa fa-user me-1" title="Customer"/>
                                        <field name="customer_id"/>
                                    </div>
                                </div>
                                <!-- Footer -->
                                <div class="d-flex justify-content-between align-items-center pt-2 border-top">
                                    <div class="text-muted small d-flex align-items-center flex-wrap">
                                        <i class="fa fa-calendar me-1" title="Inspection Repair Date"/>
                                        <field name="inspect_repair_date" class="me-1"/>
                                        <field name="activity_ids" widget="kanban_activity" class="ms-2"/>
                                    </div>
                                    <div class="fw-bold text-end">
                                        <field name="stages" widget="label_selection"
                                               options="{'classes': {
                                                                    'draft': 'default',
                                                                     'assign_to_technician': 'info',
                                                                     'in_diagnosis': 'warning',
                                                                      'supervisor_inspection': 'warning',
                                                                       'hold': 'warning',
                                                                       'complete': 'success',
                                                                       'cancel': 'danger',
                                                                       'locked': 'warning'}}"/>
                                    </div>
                                </div>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="repair_job_card_pivot_view" model="ir.ui.view">
            <field name="name">repair.job.card.pivot.view</field>
            <field name="model">repair.job.card</field>
            <field name="priority">60</field>
            <field name="arch" type="xml">
                <pivot string="Vehicle Repair Details" sample="1">
                    <field name="stages" type="col"/>
                    <field name="inspect_repair_date" interval="month" type="row"/>
                    <field name="sequence_number" type="row"/>
                </pivot>
            </field>
        </record>
        <record id="repair_job_card_calendar_view" model="ir.ui.view">
            <field name="name">repair.job.card.calendar.view</field>
            <field name="model">repair.job.card</field>
            <field name="arch" type="xml">
                <calendar string="Vehicle Repair Calendar"
                          date_start="inspect_repair_date"
                          event_open_popup="true"
                          mode="month"
                          color="vehicle_from"
                          scales="day,month,year"
                          quick_create="False">
                    <field name="vehicle_from" filters="1" options="{'icon': 'fa fa-bars'}"/>
                    <field name="customer_id" widget="many2one_avatar" options="{'icon': 'fa fa-user'}"/>
                    <field name="phone" options="{'icon': 'fa fa-phone'}"/>
                    <field name="email" options="{'icon': 'fa fa-envelope'}"/>
                    <field name="fleet_vehicle_id" invisible="not fleet_vehicle_id" options="{'icon': 'fa fa-car'}"/>
                    <field name="register_vehicle_id" invisible="not register_vehicle_id"
                           options="{'icon': 'fa fa-car'}"/>
                    <field name="vehicle_brand_id" invisible="vehicle_from != 'new'" options="{'icon': 'fa fa-car'}"/>
                    <field name="responsible_id" widget="many2one_avatar" options="{'icon': 'fa fa-user'}"
                           invisible="not responsible_id"/>
                </calendar>
            </field>
        </record>
        <record id="repair_job_card_search_view" model="ir.ui.view">
            <field name="name">repair.job.card.search.view</field>
            <field name="model">repair.job.card</field>
            <field name="arch" type="xml">
                <search>
                    <field name="sequence_number"/>
                    <field name="customer_id"/>
                    <field name="vehicle_brand_id"/>
                    <field name="vehicle_model_id"/>
                    <field name="registration_no"/>
                    <field name="vin_no"/>
                    <group>
                        <filter name="customer_id" string="Customer"
                                context="{'group_by': 'customer_id'}"/>
                        <filter name="vehicle_brand_id" string="Brand"
                                context="{'group_by': 'vehicle_brand_id'}"/>
                        <filter name="vehicle_model_id" string="Model"
                                context="{'group_by': 'vehicle_model_id'}"/>
                        <filter name="transmission_type" string="Transmission Type"
                                context="{'group_by': 'transmission_type'}"/>
                        <filter name="stages" string="Status"
                                context="{'group_by': 'stages'}"/>
                        <filter name="responsible_id" string="Responsible"
                                context="{'group_by': 'responsible_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_repair_job_card" model="ir.actions.act_window">
            <field name="name">Repair Job Cards</field>
            <field name="res_model">repair.job.card</field>
            <field name="view_mode">kanban,list,form,calendar,search,pivot,activity</field>
        </record>
    </data>
</odoo>
