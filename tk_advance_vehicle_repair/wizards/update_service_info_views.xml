<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="update_service_info_form_view" model="ir.ui.view">
            <field name="name">update.service.info.form.view</field>
            <field name="model">update.service.info</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="inspection_job_card_id" invisible="1"/>
                            <field name="repair_job_card_id" invisible="1"/>
                            <label for="odometer" string="Last Odometer"/>
                            <div class="address_format">
                                <field name="odometer" style="width: 25%"/>
                                <field name="odometer_unit" required="1" style="width: 20%; margin-left: 15px;"/>
                            </div>
                        </group>
                        <group>
                            <field name="service_date" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Update" type="object" name="action_update_service_info" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_update_service_info" model="ir.actions.act_window">
            <field name="name">Update Service Info</field>
            <field name="res_model">update.service.info</field>
            <field name="target">new</field>
            <field name="view_id" ref="update_service_info_form_view"/>
        </record>
    </data>
</odoo>
